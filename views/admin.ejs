<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Papa's Pizza</title>

    <!-- Link to JavaScript -->
    <script src="js/ice-cream.js" defer></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>

    <script src="//cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>

    <!-- Favicon -->
    <link rel="icon" href="images/ice-cream.png">

    <!-- Stylesheet -->
    <link rel="stylesheet" href="//cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css">
</head>
<body>
    <main>
        <h1>Admin Page</h1>
        <table id="order-table" class="display">
            <thead>
                <tr>
                    <th>Time</th>
                    <th>Customer</th>
                    <th>Email</th>
                    <th>Flavor</th>
                    <th>Cone</th>
                    <th>Toppings</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                <tr>
                    <td><%= order.timestamp.toLocaleString() %></td>
                    <td><%= order.customer %></td>
                    <td><%= order.email %></td>
                    <td><%= order.flavor %></td>
                    <td><%= order.cone %></td>
                    <td><%= order.toppings %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    <main>

    <script defer>
        let table = new DataTable('#order-table');
    </script>
</body>
</html>